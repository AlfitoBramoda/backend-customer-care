# =================================
# LOCAL DEVELOPMENT ENVIRONMENT
# =================================
# ⚠️ File ini TIDAK di-commit ke git (ada di .gitignore)
# Copy this file to .env and fill with your actual values

# JWT Configuration (GENERATE BARU untuk keamanan)
JWT_SECRET=your_jwt_secret_here_minimum_64_characters_for_security
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_64_characters_for_security
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=bcare-api-dev
JWT_AUDIENCE=bcare-client-dev

# Database Configuration (Sesuaikan dengan setup lokal Anda)
DB_HOST=localhost
DB_NAME=bcare_dev_db
DB_USER=your_db_username
DB_PASS=your_db_password

# Security Configuration
BCRYPT_SALT_ROUNDS=12
ENABLE_SECURITY_LOGGING=true

# Server Configuration
NODE_ENV=development
PORT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:5000
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =================================
# GOOGLE CLOUD STORAGE (Development)
# =================================
GCS_PROJECT_ID=your_gcs_project_id
GCS_BUCKET_NAME=your_bucket_name
GCS_KEY_FILE=./mock/config/gcs-service-account.json